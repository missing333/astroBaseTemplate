<style>
	
	header {
		color: var();
		padding: 1rem;
	}
	
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 0 auto;
	}

	
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.5rem;
		font-weight: bold;
		color: var(--primary);
	}
	
	.logo-image {
		vertical-align: middle;
	}
	
	.logo-text {
		display: inline-block;
		vertical-align: middle;
		line-height: 1;
		color: var(--text);
	}
	
	nav ul {
		display: flex;
		list-style: none;
		gap: 2rem;
		margin: 0;
		padding: 0;
		align-items: center;
	}
	
	nav a {
		color: var(--text);
		text-decoration: none;
		font-weight: 500;
	}
	
	nav a:hover {
		color: var(--primary);
		border-bottom: 2px solid var(--primary);
	}

	
	.btn-primary {
		padding: 0.5rem 1.1rem;
	}

	
	footer {
		background-color: var(--lightgray);
		color: var(--text);
		text-align: center;
		padding: 1rem;
		padding-top: 4rem;
	}



	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		.logo a{
			margin-bottom: 0.5rem;
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 0.3rem;
		}

		.logo-text {
			display:flex;
			flex-direction: column;
			align-items: left;
			gap: 0.15rem;
		}

		nav ul {
			flex-wrap: wrap;
			justify-content: center;
		}
	}

	
	@media (max-width: 450px) {
		nav ul li{
			padding: 0 1.2rem;
		}
	}
</style>