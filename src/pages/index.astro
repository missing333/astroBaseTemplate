<style>

	.hero {
		color: var(--text);
		padding: 4rem 1rem;
		text-align: center;
		display: flex;
		flex-direction: row-reverse;
		justify-content: center;
		align-items: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero img {
		padding: 0 5rem;
	}


	.hero h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.hero p {
		font-size: 1.5rem;
		margin-bottom: 2rem;
	}

	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn-secondary {
		background-color: var(--lightgray);
		color: var(--text);
	}

	.btn-secondary:hover {
		background-color: rgba(255, 255, 255, 0.1);
		transform: translateY(-2px);
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}



	h2 {
		text-align: center;
		margin-bottom: 2rem;
		color: var(--text);
		position: relative;
		padding-bottom: 0.5rem;
	}

	h2::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 180px;
		height: 3px;
		background-color: var(--accent);
	}

	.services-grid, .testimonial-grid, .service-area-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.services-preview {
		padding: 9rem 1rem;
	}

	.service-card {
		background-color: #f9fafb;
		border-radius: 8px;
		padding: 1.5rem;
		text-align: center;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s, box-shadow 0.3s;
	}

	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
	}

	.service-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.service-card h3 {
		color: var(--primary);
		margin-bottom: 0.5rem;
	}

	.services-link {
		text-align: center;
		margin-top: 2rem;
	}

	.services-link a {
		color: var(--primary);
		text-decoration: none;
		font-weight: bold;
		transition: color 0.3s;
		padding-bottom: 2px;
		border-bottom: 2px solid var(--primary);
	}

	.services-link a:hover {
		color: var(--secondary);
	}




	/* //////////////About Preview////////////// */
	.about-preview {
		background-color: color-mix(in srgb, var(--primary), white 85%);
		padding: 3rem 1rem;
		display: flex;
	}

	.about-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.benefits-list {
		margin: 2rem 0;
		padding-left: 1.5rem;
		align-items: center;
		justify-content: center;
	}

	.benefits-list li {
		margin-bottom: 0.75rem;
		font-size: 1.1rem;
	}

	.benefits-list li::marker {
		color: var(--darkgray);
	}

	.learn-more {
		display: inline-block;
		color: var(--primary);
		text-decoration: none;
		font-weight: bold;
		transition: color 0.3s;
	}

	.learn-more:hover {
		text-decoration: underline;
	}



	
	/* //////////////Service Areas////////////// */
	.service-areas {
		padding: 3rem 1rem;
		border-radius: 8px;
		max-width: 900px;
		margin: 4rem auto;
	}

	.service-area-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}
	

	.service-area-card {
		background-color: #f9fafb;
		border-radius: 8px;
		padding: 1.5rem;
		text-align: center;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}



	/* //////////////Testimonials////////////// */
	.testimonial-card {
		background-color: #f9fafb;
		border-radius: 8px;
		padding: 1.5rem;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		position: relative;
	}

	.testimonial-card::before {
		content: '"';
		position: absolute;
		top: -5px;
		left: 10px;
		font-size: 4rem;
		color: var(--primary);
		opacity: 0.3;
		font-family: serif;
	}

	.customer-name {
		font-weight: bold;
		text-align: right;
		color: var(--primary);
	}





	@media (max-width: 768px) {
		.logo {
			font-size: 0.5rem;
		}
		
		.hero h1 {
			font-size: 2rem;
		}

		.hero p {
			font-size: 1.2rem;
		}

		.hero-logo {
			width: 150px;
		}

		.services-grid, .testimonial-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
