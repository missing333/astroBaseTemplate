---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Ready to Get Started?",
  description = "Contact us today for a free quote on your project",
  buttonText = "Contact Us",
  buttonLink = "/contact"
} = Astro.props;
---

<section class="contact-cta">
  <h2>{title}</h2>
  <p>{description}</p>
  <a href={buttonLink} class="btn btn-primary">{buttonText}</a>
</section>

<style>
  .contact-cta {
    text-align: center;
    background-color: var(--primary-color);
    color: var(--text-light);
    max-width: 900px;
    position: relative;
    overflow: hidden;
    padding: 3rem 3rem;
    margin: 2rem;
    border-radius: 8px;
    justify-self: center;
  }

  .contact-cta h2 {
    color: var(--text-light);
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: var(--accent-color);
    color: var(--text-color);
  }

  .btn-primary:hover {
    background-color: #e6a61d;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style> 